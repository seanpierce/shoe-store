<h1>Shoe List</h1>
<br>
<% if @shoes.any? %>
  <ul class="shoe-list">
    <% @shoes.each do |shoe| %>
      <li><a href="/shoe/<%= shoe.id %>"><%= shoe.name %></a> <span><%= format("$%.2f", shoe.cost) %></span></li>
    <% end %>
  </ul>
<% else %>
<em>there are no shoes in the database</em>
<% end %>
